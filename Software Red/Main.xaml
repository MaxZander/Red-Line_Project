<Window x:Class="Software_Red.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Red"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="Close" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792">
            <TabItem Header="Leaderboard">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="Exit" Header="Options">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="129*"/>
                        <ColumnDefinition Width="653*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Close_Buttom" Content="Exit" HorizontalAlignment="Left" Margin="210.121,350,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" IsCancel="True" Click="Close_Buttom_Click"/>
                </Grid>
            </TabItem>
            <Button Content="Button" Height="100" Width="75"/>
        </TabControl>
    </Grid>
</Window>
