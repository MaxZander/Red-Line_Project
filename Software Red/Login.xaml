<Window x:Class="Software_Red.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Red"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="215*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="PSW" HorizontalAlignment="Left" Height="23" Margin="11,71,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" Grid.Column="1" GotFocus="PSW_GotFocus" TabIndex="2"/>
        <TextBox x:Name="ID" HorizontalAlignment="Left" Height="23" Margin="11,43,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="120" Grid.Column="1" GotFocus="ID_GotFocus" TabIndex="1"/>
        <Button x:Name="Connexion" Content="Log In" HorizontalAlignment="Left" Margin="32.939,136,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Connexion_Click" TabIndex="3"/>
        <TextBlock x:Name="checklog" Grid.Column="1" HorizontalAlignment="Left" Margin="11,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
