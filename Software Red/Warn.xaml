<Window x:Class="Software_Red.Warn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Red"
        mc:Ignorable="d"
        Title="Really ?" Height="170" Width="345" WindowStyle="ToolWindow">
    <Grid>
        <Label Content="Are you sure you want to quit this app ?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="47,37,0,0"/>
        <Button x:Name="Yes" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="47,87,0,0" IsDefault="True" Click="Yes_Click"/>
        <Button x:Name="No" Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click" Margin="211,87,0,0" IsCancel="True"/>

    </Grid>
</Window>
